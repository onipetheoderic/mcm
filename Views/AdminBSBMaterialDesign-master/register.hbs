<body>
	 {{#if message.success}}
   <div class="notice_wrapper">		  	
	<p class="alert">{{message.success}}</p>				
	</div>
	{{else if message.error}}
	<div class="notice_wrapper_error">			
		<p class="alert">{{message.error}}</p>
	</div>
    {{/if}}
	<div class="agile-login">
		<h1>Socratewebs</h1>
		<div class="wrapper">
			<h2>Register</h2>
			<div class="w3ls-form">
				<form id="myform" action="/admin/registration" method="post" >
					<label>First name</label>
					<input type="text" name="first_name" placeholder="First name" id="first_name" required/>
					
                    <label>Last name </label>
					<input type="text" name="last_name" placeholder="Last name" id="last_name" required/>
					
                    <label>Middle Name </label>
					<input type="text" name="middle_name" placeholder="Middle Name" id="middle_name" required/>
					{{!-- first_name:,middle_name,last_name,company_name,email,	phone,username,password,registration_date --}}
                    <label>Company's Name</label>
					<input type="text" name="company_name" placeholder="company_name" id="company_name" required/>
					
                    <label>Company's Email</label>
					<input type="email" name="email" placeholder="email" id="email" required/>
					
                    <label>Company's Phone Number</label>
					<input type="text" name="phone" placeholder="phone" id="phone" required/>
                    
                    <label>Desired Username</label>
					<input type="text" name="username" placeholder="username" id="username" required/>
					
                    <label>Password</label>
					<input type="password" name="password" placeholder="Password" id="password" required />
					
                    <label>Confirm Password</label>
					<input type="password" name="password2" placeholder="Confirm password" id="password2" required />
					
					<input type="submit" value="Register" />
				</form>
			</div>

		</div>
