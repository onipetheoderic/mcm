        <div class="container-fluid">
           
            <!-- Advanced Validation -->
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>Create A School</h2>
                            <ul class="header-dropdown m-r--5">
                                <li class="dropdown">
                                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                        <i class="material-icons">more_vert</i>
                                    </a>
                                    <ul class="dropdown-menu pull-right">
                                        <li><a href="javascript:void(0);">Action</a></li>
                                        <li><a href="javascript:void(0);">Another action</a></li>
                                        <li><a href="javascript:void(0);">Something else here</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
    
                        <div class="body">
                            <form id="form_advanced_validation" action="/admin/create_school" method="POST">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="name" min="6" max="20" required>
                                        <label class="form-label">Desired School Name</label>
                                    </div>
                                    <div class="help-info">Min. Value: 10, Max. Value: 200</div>
                                </div>
                                
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="first_name" min="6" max="20" required>
                                        <label class="form-label">Desired First Name</label>
                                    </div>
                                    <div class="help-info">Min. Value: 10, Max. Value: 200</div>
                                </div>       
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="last_name" min="6" max="20" required>
                                        <label class="form-label">Desired Last Name</label>
                                    </div>
                                    <div class="help-info">Min. Value: 6, Max. Value: 20</div>
                                </div>
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="phone" min="6" max="24" required>
                                        <label class="form-label">Phone Number</label>
                                    </div>
                                    <div class="help-info">Min. Value: 10, Max. Value: 200</div>
                                </div>    
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="email" min="6" max="20" required>
                                        <label class="form-label">Email Address</label>
                                    </div>
                                    <div class="help-info">should be a valid email</div>
                                </div>  
                                  <div class="form-group form-float">
                                    <div class="form-line">
                                        <textarea name="description" cols="30" rows="5" class="form-control no-resize" required></textarea>
                                        <label class="form-label">School Description</label>
                                    </div>
                                    <div class="help-info">School Description that would be placed in the About us page</div>
                                </div>
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="proprietorName" maxlength="20" minlength="3" required>
                                        <label class="form-label">Proprietor's Name</label>
                                    </div>
                                    <div class="help-info">Proprietor's fullName</div>
                                </div>

                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="schoolType" maxlength="103" minlength="3" required>
                                        <label class="form-label">School Type</label>
                                    </div>
                                    <div class="help-info">School Type(Nursery, primary, Nursery & Primary, Secondary, Comprehensive High School)</div>
                                </div>
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="hmName" maxlength="103" minlength="3" required>
                                        <label class="form-label">Headmaster's Name</label>
                                    </div>
                                    <div class="help-info">Headmaster/Headmistress's Name</div>
                                </div>

                                 <div class="form-group form-float">
                                    <div class="form-line">
                                        <textarea name="visionStatement" cols="30" rows="5" class="form-control no-resize" required></textarea>
                                        <label class="form-label">Vision Statement</label>
                                    </div>
                                </div>
                                 <div class="form-group form-float">
                                    <div class="form-line">
                                        <textarea name="missionStatement" cols="30" rows="5" class="form-control no-resize" required></textarea>
                                        <label class="form-label">Mission Statement</label>
                                    </div>
                                </div>
                                
                                 <div class="form-group form-float">
                                    <div class="form-line">
                                    <input type="color" class="form-control" name="majorColor" value="#ff0000">
                                        <label class="form-label">Major Color</label>
                                    </div>
                                    <div class="help-info">Desired Obvious Conspicous color</div>
                                </div>

                                <div class="form-group form-float">
                                    <div class="form-line">
                               
                                        <input type="color" class="form-control" name="minorColor" value="#ff0000">
                                        <label class="form-label">Minor Color</label>
                                    </div>
                                    <div class="help-info">desired second conspicous Color</div>
                                </div>
                                 <div class="form-group form-float">
                                    <div class="form-line">
                                      <input type="color" class="form-control" name="thirdColor" value="#ff0000">
                                        <label class="form-label">Third Color</label>
                                    </div>
                                    <div class="help-info">Desired least conspicous Color</div>
                                </div>
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="latitude" min="10" max="200" required>
                                        <label class="form-label">Latitude</label>
                                    </div>
                                    <div class="help-info">Latitude position</div>
                                </div>
                                   <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="longitude" min="10" max="200" required>
                                        <label class="form-label">Longitude</label>
                                    </div>
                                    <div class="help-info">Longitude position</div>
                                </div>
                                

      
                                 <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="username" min="6" max="20" required>
                                        <label class="form-label">Desired Username</label>
                                    </div>
                                    <div class="help-info">Min. Value: 10, Max. Value: 200</div>
                                </div>
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="password" class="form-control" name="password" min="6" max="20" required>
                                        <label class="form-label">Desired Password</label>
                                    </div>
                                    <div class="help-info">Alpha-numeric characters should be embeded</div>
                                </div>
                                <button class="btn btn-primary waves-effect" type="submit">SUBMIT</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #END# Advanced Validation -->

        </div>

