
<!-- Advanced Form Example With Validation -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>ADD A NEW PRODUCT</h2>
                
            </div>
        <div class="body">
            <form id="wizard_with_validation" action='/product/add' method="POST" enctype="multipart/form-data">
                <h3>Product Information</h3>
                <fieldset>

                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" class="form-control" name="name" required>
                            <label class="form-label">Product name*</label>
                        </div>
                    </div>  

                    <input type="text" id="toSave" name="category_id" class="form-control">
                    <input type="text" id="toShow" class="form-control" ><br>
                        <select id="Ultra" onchange="run()">  <!--Call run() function-->
                            {{#each category}}
                                    <option value={{this._id}}>{{this.name}}</option>
                            {{/each}}    
                    
                        </select>
<script>

function run() {
    document.getElementById("toSave").value = document.getElementById("Ultra").value;
    var e = document.getElementById("Ultra");
    var strUser = e.options[e.selectedIndex].text;
    document.getElementById("toShow").value = strUser;
    console.log(strUser)
}
$(document).ready(function() {
    run();
});

</script>
