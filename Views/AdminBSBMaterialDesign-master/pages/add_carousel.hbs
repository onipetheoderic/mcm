
<!-- Advanced Form Example With Validation -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>ADD A NEW CATEGORY</h2>
                
            </div>
            <div class="body">
                <form id="wizard_with_validation" action='/carousel/add' method="POST" enctype="multipart/form-data">
                    <h3>Carousel/Advert Information</h3> 
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="text" name="link" class="form-control" required>
                                <label class="form-label">Carousel Link*</label>
                            </div>
                        </div>

                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="text" name="header" class="form-control" >
                                <label class="form-label">Header</label>
                            </div>
                        </div>

                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="text" name="secondheader" class="form-control" >
                                <label class="form-label">Second Header</label>
                            </div>
                        </div>
                        
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="text" name="description" class="form-control" >
                                <label class="form-label">Description</label>
                            </div>
                        </div>

                        <h3>Carousel Image</h3>
                        <fieldset>                        
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="file" name="image" class="form-control" placeholder="Category Image" required>
                            </div>
                        </div>
                        </fieldset>

                <button type="submit" class="btn btn-primary btn-lg m-l-15 waves-effect">CREATE A NEW CAROUSEL</button>
            </form>
            </div>
        </div>
    </div>
</div>
<!-- #END# Advanced Form Example With Validation -->

