                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="email" class="form-control" name="email" maxlength="100" minlength="3" required>
                                <label class="form-label">Email Address</label>
                            </div>
                            <div class="help-info">example: theoderic@gmail.com</div>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="text" class="form-control" name="phone" maxlength="149" minlength="11" required>
                                <label class="form-label">Phone Number</label>
                            </div>
                            <div class="help-info">A Valid phone number 07039148866</div>
                        </div>
                        
                        <div class="form-group form-float">
                            <div class="form-line">
                             <br/>
                            
                                <input type="date" class="form-control" name="dob" required>

                                <label class="form-label">Date of Birth</label>
                            </div>

                            <div class="help-info">MM-DD-YYYY format</div>
                        </div>

                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="text" class="form-control" name="address" maxlength="194" minlength="3" required>
                                <label class="form-label">Home Address</label>
                            </div>
                            <div class="help-info">example: Number 12 ilorin street</div>
                        </div>
                         <div class="form-group form-float">
                            <div class="form-line">
                                <input type="text" class="form-control" name="place_of_birth" maxlength="194" minlength="3" required>
                                <label class="form-label">Place of Birth</label>
                            </div>
                            <div class="help-info">Place of Birth</div>
                        </div>

                         <div class="form-group form-float">
                            <div class="form-line">
                                <input type="text" class="form-control" name="church_attended" maxlength="194" minlength="1" required>
                                <label class="form-label">Church Attended</label>
                            </div>
                            <div class="help-info">example: Catholic Cathedral, pentecostal, others</div>
                        </div>

                         
                        <div class="form-group">
                        <p>Favourite Subject</p>
                            {{#each subject}}
                            <br/>                                       
                            <input type="radio" value={{this.name}} name="favourite_subject" id={{this._id}} class="with-gap">
                            <label for={{this._id}}>{{this.name}}</label>
                            {{/each}}
                             
                        </div>  

      
                        
                        <div class="form-group">
                        <p>Current Class</p>
                            {{#each myClass}}
                                       
                            <input type="radio" value={{this.name}} name="current_class" id={{this._id}} class="with-gap">
                            <label for={{this._id}}>{{this.name}}</label>
                            {{/each}}
                             
                        </div>    

                        <div class="form-group">
                            <input type="radio" id="christain" name="religion"  value="christain" class="with-gap">
                            <label for="christain">Christainity</label>

                            <input type="radio" id="muslim" name="religion" value="muslim" class="with-gap">
                            <label for="muslim" class="m-l-20">Muslim</label>

                            <input type="radio" name="religion"  id="hinduism" value="hinduism" class="with-gap">
                            <label for="hinduism" class="m-l-20">Hindu</label>
                            <input type="radio" name="religion" value="atheist" class="with-gap">
                            <label for="atheist" id="atheist"  class="m-l-20">Atheist</label>
                            <div class="help-info">Christain, Muslim, Hinduism, Atheist</div>
                        </div>

                         <div class="form-group form-float">
                            <div class="form-line">
                                <input type="text" id="n3" class="form-control" name="username" min="6" max="20" required>
                                <label class="form-label">Desired Username</label>
                            </div>
                            <div class="help-info">Min. Value: 10, Max. Value: 200</div>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="password" class="form-control" name="password" min="6" max="20" required>
                                <label class="form-label">Desired Password</label>
                            </div>
                            <div class="help-info">Alpha-numeric characters should be embeded</div>
                        </div>
                                <button class="btn btn-primary waves-effect" type="submit">SUBMIT</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #END# Advanced Validation -->

