                                </li>
                            </ul>
                        </div>

                <div class="body">
                    <form id="form_advanced_validation" action="/admin/create_pupil" method="POST">


                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="text" id="n1" class="form-control" name="first_name" maxlength="121" minlength="3" required>
                                <label class="form-label">First Name</label>
                            </div>
                            <div class="help-info">First name required</div>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="text" id="n2" onkeyup="sync()" class="form-control" name="last_name" maxlength="121" minlength="3" required>
                                <label class="form-label">Last Name</label>
                            </div>
                            <div class="help-info">Last Name required</div>
                        </div>
                         <div class="form-group form-float">
                            <div class="form-line">
                                <input type="text" id="n2" onkeyup="sync()" class="form-control" name="middle_name" maxlength="121" minlength="3" >
                                <label class="form-label">Middle Name</label>
                            </div>
                            <div class="help-info">Middle Name is not mandatory</div>
                        </div>
                          <div class="form-group">
                                    <input type="radio" value="Male" name="sex" id="male" class="with-gap">
                                    <label for="male">Male</label>

                                    <input type="radio" value="Female" name="sex" id="female" class="with-gap">
                                    <label for="female" class="m-l-20">Female</label>
                        </div>
                            <select id="selectParent" name="parent_id">
                                <option> All School Parents</option>
                            </select>
                                    
                            <select id="selectNumber" name="state_of_origin" onchange="myFunction()">
                                <option>State of Origin</option>
                            </select>
                         
                  
                            <script>

function sync(){
    var n1 = document.getElementById('n1');
    var n2 = document.getElementById('n2');
    var n3 = document.getElementById('n3')
    var seq = (Math.floor(Math.random() * 10000) + 10000).toString().substring(1);
    n3.value = n2.value + "_" + n1.value + seq;

   console.log("typing", n2.value)
}

                            var state_list = {{{json state}}}
                            var parentList = {{{json parent}}}

                           console.log(parentList);
