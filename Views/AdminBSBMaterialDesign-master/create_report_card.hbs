        <div class="container-fluid">
           
            <!-- Advanced Validation -->
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>Create A New Report Sheet</h2>
                            <ul class="header-dropdown m-r--5">
                                <li class="dropdown">
                                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                        <i class="material-icons">more_vert</i>
                                    </a>
                                    <ul class="dropdown-menu pull-right">
                                        <li><a href="javascript:void(0);">Action</a></li>
                                        <li><a href="javascript:void(0);">Another action</a></li>
                                        <li><a href="javascript:void(0);">Something else here</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>

                <div class="body">
                    <form id="form_advanced_validation" action="/admin/create_new_report_sheet"method="POST">

<input type="hidden" class="form-control" name="staff_id" value={{staff_id}}>
<input type="hidden" class="form-control" name="staff_pupils_school_id" value={{staff_pupils_school_id}}>

                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="text" class="form-control" name="name" maxlength="194" minlength="3" required>
                                <label class="form-label">Report Card Name</label>
                            </div>
                            <div class="help-info">examples are first term report sheet, second term report sheet</div>
                        </div>

                        <div class="form-group">
                            <input type="radio" value="First term" name="term_name" id="first_term" class="with-gap">
                            <label for="first_term">First Term</label>

                            <input type="radio" value="Second Term" name="term_name" id="second_term" class="with-gap">
                            <label for="second_term" class="m-l-20">Second Term</label>

                            <input type="radio" value="Third Term" name="term_name" id="third_term" class="with-gap">
                            <label for="third_term" class="m-l-20">Third Term</label>
                        </div>


                        <div class="form-group">
                        <p>Current Class</p>
                            {{#each myClass}}
                                       
                            <input type="radio" value={{this._id}} name="current_class" id={{this._id}} class="with-gap">
                            <label for={{this._id}}>{{this.name}}</label>
                            {{/each}}
                             
                        </div>  

                                <button class="btn btn-primary waves-effect" type="submit">SUBMIT</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #END# Advanced Validation -->

        </div>

